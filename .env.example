# ===============================
# TRANSCRIPTION ENGINE (Required)
# ===============================
# Primary transcription engine: "granite" (recommended) or "whisper"
TRANSCRIBER=granite

# Granite Speech configuration (IBM Granite Speech 3.3-8B)
# Model: ibm-granite/granite-speech-3.3-8b (default)
GRANITE_MODEL=ibm-granite/granite-speech-3.3-8b
# Number of parallel workers (2 recommended for 16-core CPU)
GRANITE_WORKERS=2
# Audio chunk duration in seconds (1200 = 20 minutes)
GRANITE_CHUNK_DURATION=1200
# Device: auto (detect GPU), cuda (force GPU), cpu (force CPU)
GRANITE_DEVICE=auto

# ===============================
# WHISPER FALLBACK (Optional)
# ===============================
# Whisper Large v3 is used as fallback if Granite fails
WHISPER_MODEL_SIZE=large-v3
WHISPER_DEVICE=auto
WHISPER_COMPUTE_TYPE=auto

